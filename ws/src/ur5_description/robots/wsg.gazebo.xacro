<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="wsg_gazebo">
  
    <!-- wsg base -->

    <gazebo reference="wsg_base">
      <static>true</static>
      <selfCollide>true</selfCollide>
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <static>true</static>
      <material>Gazebo/Grey</material>
    </gazebo>

    <!-- Right -->
    
    <gazebo reference="wsg_finger_mount_right">
